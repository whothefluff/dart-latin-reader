    "syllableNumber" INTEGER NOT NULL,
    "macronizedSyllable" TEXT NOT NULL,
    PRIMARY KEY( workId, idx, syllableNumber ),
    FOREIGN KEY( workId, idx ) REFERENCES WorkContents( workId, idx )
) 
